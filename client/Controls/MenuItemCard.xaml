<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.Controls.MenuItemCard">

    <Frame Padding="0" 
           CornerRadius="10" 
           HasShadow="True" 
           BorderColor="#EEEEEE"
           HeightRequest="200"
           WidthRequest="180">
        <Grid RowDefinitions="120,*">
            <!-- Item Image -->
            <Image x:Name="ItemImage" 
                   Grid.Row="0" 
                   Aspect="AspectFill" 
                   HeightRequest="120">
                <Image.Clip>
                    <RoundRectangleGeometry Rect="0,0,180,120" CornerRadius="10,10,0,0" />
                </Image.Clip>
            </Image>
            
            <!-- Discount Badge -->
            <Frame x:Name="DiscountFrame"
                   Grid.Row="0"
                   BackgroundColor="#FF5722"
                   Padding="8,4"
                   CornerRadius="10"
                   HorizontalOptions="End"
                   VerticalOptions="Start"
                   Margin="0,10,10,0"
                   IsVisible="False">
                <Label x:Name="DiscountLabel"
                       Text="15% OFF"
                       TextColor="White"
                       FontSize="10"
                       FontAttributes="Bold" />
            </Frame>
            
            <!-- Item Details -->
            <StackLayout Grid.Row="1" Padding="10" Spacing="3">
                <Label x:Name="NameLabel" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       LineBreakMode="TailTruncation"
                       MaxLines="1" />
                
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label x:Name="PriceLabel" 
                           FontSize="14" 
                           FontAttributes="Bold" 
                           TextColor="{StaticResource Primary}" />
                    
                    <Label x:Name="OriginalPriceLabel" 
                           FontSize="12" 
                           TextColor="#999999" 
                           TextDecorations="Strikethrough"
                           IsVisible="False" />
                </StackLayout>
                
                <Label x:Name="CategoryLabel" 
                       FontSize="12" 
                       TextColor="#666666" />
                
                <Button x:Name="ViewButton" 
                        Text="View" 
                        HeightRequest="30"
                        WidthRequest="70"
                        CornerRadius="15"
                        FontSize="12"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        HorizontalOptions="Start"
                        Margin="0,5,0,0" />
            </StackLayout>
        </Grid>
    </Frame>
</ContentView>