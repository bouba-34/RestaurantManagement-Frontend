<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <!-- Core Colors -->
    <Color x:Key="PrimaryColor">#3498db</Color>
    <Color x:Key="PrimaryDarkColor">#2980b9</Color>
    <Color x:Key="PrimaryLightColor">#9ec5e5</Color>
    <Color x:Key="AccentColor">#E67E22</Color>
    <Color x:Key="SecondaryColor">#673AB7</Color>
    <Color x:Key="TertiaryColor">#2196F3</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#27AE60</Color>
    <Color x:Key="WarningColor">#F39C12</Color>
    <Color x:Key="ErrorColor">#E74C3C</Color>
    <Color x:Key="InfoColor">#3498DB</Color>

    <!-- Order Status Colors -->
    <Color x:Key="PlacedColor">#3498DB</Color>
    <Color x:Key="PreparingColor">#F39C12</Color>
    <Color x:Key="ReadyColor">#27AE60</Color>
    <Color x:Key="ServedColor">#9B59B6</Color>
    <Color x:Key="CompletedColor">#2ECC71</Color>
    <Color x:Key="CancelledColor">#E74C3C</Color>

    <!-- Payment Status Colors -->
    <Color x:Key="PaidColor">#27AE60</Color>
    <Color x:Key="PendingColor">#F39C12</Color>
    <Color x:Key="FailedColor">#E74C3C</Color>
    <Color x:Key="RefundedColor">#3498DB</Color>

    <!-- Reservation Status Colors -->
    <Color x:Key="ReservationPendingColor">#F39C12</Color>
    <Color x:Key="ConfirmedColor">#27AE60</Color>
    <Color x:Key="NoShowColor">#E74C3C</Color>

    <!-- Background Colors -->
    <Color x:Key="LightBackgroundColor">#F8F9FA</Color>
    <Color x:Key="DarkBackgroundColor">#121212</Color>
    <Color x:Key="LightCardColor">White</Color>
    <Color x:Key="DarkCardColor">#1E1E1E</Color>

    <!-- Text Colors -->
    <Color x:Key="LightTextColor">#212529</Color>
    <Color x:Key="DarkTextColor">White</Color>

    <!-- Border Colors -->
    <Color x:Key="LightBorderColor">#DEE2E6</Color>
    <Color x:Key="DarkBorderColor">#333333</Color>
    

    <!-- Dynamic/Theme-aware Colors -->
    <toolkit:AppThemeColor x:Key="AppBackgroundColor"
                   Light="{StaticResource LightBackgroundColor}"
                   Dark="{StaticResource DarkBackgroundColor}" />
    <toolkit:AppThemeColor x:Key="CardBackgroundColor"
                   Light="{StaticResource LightCardColor}"
                   Dark="{StaticResource DarkCardColor}" />
    <toolkit:AppThemeColor x:Key="TextPrimaryColor"
                   Light="{StaticResource LightTextColor}"
                   Dark="{StaticResource DarkTextColor}" />
    <toolkit:AppThemeColor x:Key="TextSecondaryColor"
                   Light="#757575"
                   Dark="#AAAAAA" />
    <toolkit:AppThemeColor x:Key="BorderColor"
                   Light="{StaticResource LightBorderColor}"
                   Dark="{StaticResource DarkBorderColor}" />
    <toolkit:AppThemeColor x:Key="SeparatorColor"
                   Light="{StaticResource LightBorderColor}"
                   Dark="{StaticResource DarkBorderColor}" />
</ResourceDictionary>
