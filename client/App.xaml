<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Client.Converters"
             xmlns:converters1="clr-namespace:Client.Converters"
             x:Class="Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters1:CountToBoolConverter x:Key="CountToBoolConverter" />
            <converters1:CountToInverseBoolConverter x:Key="CountToInverseBoolConverter" />
            <converters1:CountToHeightConverter x:Key="CountToHeightConverter" />
            <converters1:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters1:StringToBoolConverter x:Key="StringToBoolConverter" />
            <converters1:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters1:EqualsToBrushConverter x:Key="EqualsToBrushConverter" />
            <converters:IndexConverter x:Key="IndexConverter" />
            <converters:OrderStatusToColorConverter x:Key="OrderStatusToColorConverter" />
            <converters:NumberSignToColorConverter x:Key="NumberSignToColorConverter" />
            <converters:ReservationStatusToColorConverter x:Key="ReservationStatusToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>